<div>
  <h3 class="text-primary mb-2 text-sm font-medium">ADD A GREETING CARD (OPTIONAL)</h3>
  <div class="flex overflow-hidden rounded-md border border-gray-300">
    {% comment %} Placeholder for Add Card button/toggle {% endcomment %}
    <button
      type="button"
      class="focus:ring-primary-light flex items-center justify-center border-r border-gray-300 bg-white p-4 focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50"
      disabled
    >
      {% render 'icons', icon: 'arrow-plus' %}
    </button>
    <div class="relative flex-grow p-3">
      <textarea
        id="CartNote"
        name="note"
        class="h-20 w-full resize-none border-0 bg-transparent p-0 text-sm placeholder-gray-400 focus:ring-0"
        placeholder="
          Card message
          To:
          From:
        "
        rows="4"
      >{{ cart.note }}</textarea>
      <button
        type="button"
        class="absolute right-2 top-2 text-gray-400 hover:text-gray-600 focus:outline-none"
      >
        {% render 'icons', icon: 'arrow-chevron-right' %}
      </button>
    </div>
  </div>
</div>
