{% layout 'theme' %}

<div class="mx-auto max-w-screen-lg px-4 py-8">
  <h1 class="mb-6 text-4xl font-bold text-[var(--color-primary)]">
    {{ page.title }}
  </h1>

  <div class="prose prose-lg text-[var(--color-primary-dark)]">
    {{ page.content }}
  </div>
  <color-palette
    primary="{{ settings.colors_primary }}"
    accent="{{ settings.colors_accent }}"
    secondary="{{ settings.colors_secondary }}"
    tertiary="{{ settings.colors_tertiary }}"
  >
  </color-palette>
</div>

{% render 'vite' with 'colour-palette.ts' %}

{% schema %}
{
  "name": "Style Guide",
  "tag": "section",
  "class": "style-guide-section",
  "blocks": [
    {
      "type": "color",
      "name": "Color",
      "settings": [
        {
          "type": "text",
          "id": "color_name",
          "label": "Color Name"
        },
        {
          "type": "text",
          "id": "color_hex",
          "label": "Color Hex"
        },
        {
          "type": "text",
          "id": "color_rgb",
          "label": "Color RGB"
        },
        {
          "type": "textarea",
          "id": "color_purpose",
          "label": "Color Purpose"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Brand Color Palette"
    },
    {
      "type": "checkbox",
      "id": "show_combinations",
      "label": "Show color combinations",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Style Guide"
    }
  ]
}
{% endschema %}
